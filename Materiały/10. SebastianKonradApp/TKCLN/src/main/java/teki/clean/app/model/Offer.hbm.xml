<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="teki.clean.app.model">
	<class name="Offer" table="OFFERS">
		<id name="offer_id" column="OFFER_ID">
			<generator class="native"/>
		</id>
		<property name="cleaner_id" column="CLEANER_ID" />
		<property name="offer_type" column="OFFER_TYPE" />
		<property name="descr" column="DESCR" />
		<property name="scheduled" column="SCHEDULED" />
		<property name="day" column="DAY" />
		<property name="time" column="TIME" />
	</class>	
</hibernate-mapping>
